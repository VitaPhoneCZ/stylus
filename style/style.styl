body
    margin: 0
    padding: 0
header
    width: 100%
    height: 100px
    box-shadow: rgba(0, 0, 0, 0.1) 0px 4px 12px;
    position relative



    .wrapper
        max-width: 1300px
        margin: auto
        display: flex
        align-items: center
        justify-content: space-between
        background: white


        &-logo
            width: 50px
            height: 50px

            img
                width: 100%
                height: 100%   
        
        &-hamburger
            width: 50px
            height: 30px
            display: flex
            flex-direction: column
            justify-content: space-between
            cursor pointer
            margin-right: 20px

            span
                border: 2px solid black
                left: 50%
                transform: translateX(-50%)

    nav
        position: absolute
        left: 50%
        transform: translateX(-50px), translateY(-100px)
        z-index 1

        &:target
            transform: translateY(0)